{
  "manifest_version": 3,
  "name": "Continent Detector",
  "version": "1.0.0",
  "description": "Shows the continent of the website server you're connected to",
  "permissions": ["activeTab", "tabs", "storage", "webRequest", "webRequestBlocking"],
  "host_permissions": [
    "https://dns.google/*",
    "https://ip2c.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/globe16.png",
      "32": "icons/globe32.png",
      "48": "icons/globe48.png",
      "128": "icons/globe128.png"
    }
  },
  "icons": {
    "16": "icons/globe16.png",
    "32": "icons/globe32.png",
    "48": "icons/globe48.png",
    "128": "icons/globe128.png"
  }
}
